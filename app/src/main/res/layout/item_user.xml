<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_profile"
        android:layout_width="wrap_content"
        android:layout_height="192dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/classical_blue"
        tools:background="@color/colorAccent" />

    <TextView
        android:id="@+id/id_prenom"
        android:layout_width="224dp"
        android:layout_height="25dp"
        android:layout_above="@+id/id_nom"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="5dp"
        android:text="Mamadou Souaré"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="@tools:sample/first_names" />

    <TextView
        android:id="@+id/id_nom"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="158dp"
        android:layout_marginLeft="158dp"
        android:layout_marginBottom="490dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="@tools:sample/last_names" />

    <TextView
        android:id="@+id/id_statut"
        android:layout_width="223dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/id_prenom"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="89dp"
        android:text="Développeur"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="152dp"
        android:layout_height="193dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="374dp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/user_default_icon" />

    <Button
        android:id="@+id/id_editer_profile"
        android:layout_width="28dp"
        android:layout_height="27dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="255dp"
        android:layout_marginLeft="255dp"
        android:layout_marginBottom="399dp"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/ic_mode_edit_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="369dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_below="@+id/id_profile"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="111dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="34dp"
                android:layout_marginLeft="34dp"
                android:layout_marginBottom="101dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="90dp"
                    android:layout_height="58dp"
                    android:contentDescription="TODO"
                    tools:srcCompat="@drawable/theme_image" />

                <TextView
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:text="Thèmes" />

                <TextView
                    android:id="@+id/id_theme_ouvert"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="1/8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="111dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="34dp"
                android:layout_marginLeft="34dp"
                android:layout_marginBottom="101dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="90dp"
                    android:layout_height="58dp"
                    android:contentDescription="TODO"
                    tools:srcCompat="@drawable/classeur" />

                <TextView
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:text="Cours" />

                <TextView
                    android:id="@+id/id_score_db"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="1/47" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="89dp"
                android:layout_height="96dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="34dp"
                android:layout_marginLeft="34dp"
                android:layout_marginBottom="101dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="90dp"
                    android:layout_height="58dp"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/quizz_image"
                    tools:srcCompat="@drawable/quizz_image" />

                <TextView
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:text="Quizz" />

                <TextView
                    android:id="@+id/id_note_quizz"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="1/19" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/id_stat"
            android:layout_width="match_parent"
            android:layout_height="421dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/barre_chart" />

    </LinearLayout>

</RelativeLayout>