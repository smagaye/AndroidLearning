<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/idl"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/background_profile"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/id_profile"
            android:layout_width="99dp"
            android:layout_height="105dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/user_default_icon"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="251dp"
            android:layout_height="147dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/id_prenom"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_above="@+id/id_nom"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="1dp"
                android:text="Mamadou"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="@tools:sample/first_names" />

            <TextView
                android:id="@+id/id_nom"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:text="Souaré"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="@tools:sample/last_names" />

            <TextView
                android:id="@+id/id_statut"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:text="Développeur"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/id_btn_editer"
                android:layout_width="166dp"
                android:layout_height="26dp"
                android:background="@android:color/white"
                android:text="Editer profile"
                android:textColor="@color/colorAccent" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="369dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="397dp"
            android:layout_height="115dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/id_profile"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="111dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="101dp"
                android:layout_marginLeft="34dp"
                android:layout_marginStart="34dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/id_img_theme"
                    android:layout_width="90dp"
                    android:layout_height="58dp"
                    android:contentDescription="TODO"
                    tools:srcCompat="@drawable/theme_image" />

                <TextView
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:text="Thèmes" />

                <TextView
                    android:id="@+id/id_theme_ouvert"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="1/8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="111dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="101dp"
                android:layout_marginLeft="34dp"
                android:layout_marginStart="34dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/id_img_cours"
                    android:layout_width="90dp"
                    android:layout_height="58dp"
                    android:contentDescription="TODO"
                    tools:srcCompat="@drawable/classeur" />

                <TextView
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:text="Cours" />

                <TextView
                    android:id="@+id/id_score_db"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="1/47" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="89dp"
                android:layout_height="96dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="101dp"
                android:layout_marginLeft="34dp"
                android:layout_marginStart="34dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/id_img_quizz"
                    android:layout_width="90dp"
                    android:layout_height="58dp"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/quizz_image"
                    tools:srcCompat="@drawable/quizz_image" />

                <TextView
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:text="Quizz" />

                <TextView
                    android:id="@+id/id_note_quizz"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="1/19" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/id_stat"
            android:layout_width="406dp"
            android:layout_height="467dp"
            android:layout_marginBottom="200dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/barre_chart" />

    </LinearLayout>

</LinearLayout>