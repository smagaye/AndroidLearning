                android:text="booligno yii"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/reponse_text_item4"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
