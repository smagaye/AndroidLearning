<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="12dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:translationX="4dp">

        <ImageView
            android:id="@+id/id_image"
            android:layout_width="93dp"
            android:layout_height="match_parent"
            android:background="@color/cardview_light_background"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/android_im" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="Titre du Exercice"
                android:textColor="#38D0FD"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_description"
                android:layout_width="231dp"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="Description sommaire du cours. Autrement ne relever que les points saillant de ce dernier."
                android:textColor="#38D0FD" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/valide_icon"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/valide_icon" />

</RelativeLayout>